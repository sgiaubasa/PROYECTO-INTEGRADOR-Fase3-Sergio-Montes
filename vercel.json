{
  "version": 2,
  "builds": [
    { "src": "api/[...all].js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "functions": {
    "api/[...all].js": { "includeFiles": "backend/**", "memory": 1024 }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "api/[...all].js" },
    { "src": "^/(.*)\\.(js|css|png|jpg|jpeg|svg|ico|webp|woff|woff2|ttf|map)$", "dest": "frontend/dist/$1.$2" },
    { "src": "^(?!/api).*", "dest": "frontend/dist/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' https: http:; media-src 'self' data: blob:; base-uri 'self'; form-action 'self'; frame-ancestors 'self'"
        }
      ]
    }
  ]
}







